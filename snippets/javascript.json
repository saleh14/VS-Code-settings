"OpenUI5 Controller skilleton": {
  "prefix": "ui5ControllerStarter",
  "body": [
    "sap.ui.define([",
    "  'sap/ui/core/mvc/Controller'",
    "], function (Controller) {",
    "  'use strict'",
    "",
    "  return Controller.extend('opensap.myapp.controller.App', {",
    "",
    "    onShowHello: function () {",
    "			// show a native JavaScript alert",
    "      alert('Hello World')",
    "    }",
    "  })",
    "})",
    ""
  ],
  "description": "OpenUI5 Controller skilleton"
},

"OpenUI5 Component skilleton": {
  "prefix": "ui5ComponentStarter",
  "body": [
    "sap.ui.define([",
    "  'sap/ui/core/UIComponent'",
    "], function (UIComponent) {",
    "  'use strict'",
    "",
    "  return UIComponent.extend('opensap.myapp.Component', {",
    "",
    "    metadata: {",
    "      manifest: 'json'",
    "    },",
    "",
    "    init: function () {",
    "			// call the init function of the parent",
    "      UIComponent.prototype.init.apply(this, arguments)",
    "",
    "			// additional initialization can be done here",
    "    }",
    "",
    "  })",
    "})"
  ],
  "description": "OpenUI5 Component skilleton"
}
