                "~",
                "i",
                "w",
                "e",
                "a"
            ]
        },
        {
            "before": [
                "j",
                "j"
            ],
            "after": [
                "<Esc>"
            ]
        },
        {
            "before": [
                "ctrl+k",
                "ctrl+p"
            ],
            "after": [
                "<Esc>",
                "ctrl+k",
                "ctrl+p",
                "i"
            ]
        }
    ],
    "vim.insertModeKeyBindingsNonRecursive": [],
