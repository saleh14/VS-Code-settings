        {
            "before": [
                "A",
                "A"
            ],
            "after": [
                "<Esc>",
                "A"
            ]
        },
        {
            "before": [
                "I",
                "I"
            ],
            "after": [
                "<Esc>",
                "I"
            ]
        },
        {
            "before": [
                "ctrl+shift+d"
            ],
            "after": [
                "<Esc>",
                "h",
                "i"
            ]
        },
        {
            "before": [
                "S",
                "S"
            ],
            "after": [
                "<Esc>",
                "S"
            ]
        },
        {
            "before": [
                "C",
