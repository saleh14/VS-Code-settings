// Place your settings in this file to overwrite the default settings
{
    "editor.fontFamily": "Fira Code",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "vim.easymotion": true,
    "vim.otherModesKeyBindings": [
        {
            "before": [
                ","
            ],
            "after": [
                "<Esc>",
                "\\",
                "\\",
                "s"
            ]
        }
    ],
    "vim.insertModeKeyBindings": [
        {
            "before": [
                "A",
                "A"
            ],
            "after": [
                "<Esc>",
                "A"
            ]
        },
        {
            "before": [
                "I",
                "I"
            ],
            "after": [
                "<Esc>",
                "I"
            ]
        },
        {
            "before": [
                "ctrl+shift+d"
            ],
            "after": [
                "<Esc>",
                "h",
                "i"
            ]
        },
        {
            "before": [
                "S",
                "S"
            ],
            "after": [
                "<Esc>",
                "S"
            ]
        },
        {
            "before": [
                "C",
                "C"
            ],
            "after": [
                "<Esc>",
                "h",
                "e",
                "b",
                "c",
                "e"
            ]
        },
        {
            "before": [
                "P",
                "P"
            ],
            "after": [
                "<Esc>",
                "h",
                "p",
                "i"
            ]
        },
        {
            "before": [
                "U",
                "U"
            ],
            "after": [
                "<Esc>",
                "u",
                "i"
            ]
        },
        {
            "before": [
                "L",
                "L"
            ],
            "after": [
                "<Esc>",
                "h",
                "g",
                "~",
                "i",
                "w",
                "e",
                "a"
            ]
        }
    ],
    "window.zoomLevel": 0,
    "editor.cursorStyle": "block"
}